{
  "name": "prime-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --config nodemon.json --inspect src/index.ts",
    "start": "node dist/index.js",
    
    "lint:check": "npx prettier . --check",
    "lint:fix": "npx prettier . --write",
    "prepare": "husky install",

    "generate:types": "gql-gen --config codegen.ts",
    "generate:ssh": "node ./scripts/generate-rsa-keys.js",

    "db:boot": "npm run db:generate && npm run db:deploy",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:studio": "npx prisma studio",
    "db:seed": "prisma db seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Conppu/prime-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Conppu/prime-service/issues"
  },
  "homepage": "https://github.com/Conppu/prime-service#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/graphql-modules-preset": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "commander": "^11.1.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "graphql-codegen-typescript-common": "0.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "prisma": "^5.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "apollo-server-errors": "^3.3.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "graphql-modules": "^2.2.1",
    "graphql-scalars": "^1.22.4",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.2",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown"
  }
}
